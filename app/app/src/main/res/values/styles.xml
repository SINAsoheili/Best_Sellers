<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="solid_button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:radius">@dimen/small_corner_radius</item>
        <item name="android:padding">@dimen/padding_4</item>
    </style>

    <style name="text_input_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_green</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxCornerRadiusBottomStart">@dimen/small_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/small_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/small_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/small_corner_radius</item>
        <item name="android:layout_marginTop">@dimen/margin_2</item>
        <item name="android:layout_marginRight">@dimen/margin_2</item>
        <item name="android:layout_marginLeft">@dimen/margin_2</item>
    </style>

    <style name="user_main_page_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintWidth_percent">0.3</item>
        <item name="layout_constraintHeight_percent">0.6</item>
        <item name="android:padding">@dimen/padding_3</item>
    </style>

    <style name="user_main_page_item_text">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="user_main_page_item_card_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintHeight_percent">0.2</item>
        <item name="cardCornerRadius">@dimen/small_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_marginTop">@dimen/margin_2</item>
        <item name="android:layout_marginLeft">@dimen/margin_2</item>
        <item name="android:layout_marginRight">@dimen/margin_2</item>
    </style>

</resources>