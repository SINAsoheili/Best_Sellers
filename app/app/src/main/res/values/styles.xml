<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="solid_button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:radius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/padding_4</item>
    </style>

    <style name="login_text_input_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_green</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="android:layout_marginTop">@dimen/margin_2</item>
        <item name="android:layout_marginRight">@dimen/margin_2</item>
        <item name="android:layout_marginLeft">@dimen/margin_2</item>
    </style>

</resources>