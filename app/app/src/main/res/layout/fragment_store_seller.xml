<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_fragmentStoreSeller_shopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_fragmentStoreSeller_shopAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/tv_fragmentStoreSeller_shopPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_fragmentStoreSeller_shopSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_fragmentStoreSeller_shopDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#F1EAEA"
        android:gravity="center"
        android:text="location"
        android:layout_margin="@dimen/margin_3"
        />

    <ProgressBar
        android:id="@+id/pb_fragmentStoreSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_fragmentStoreSeller_sellerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>