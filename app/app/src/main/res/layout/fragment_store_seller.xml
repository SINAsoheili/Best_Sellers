<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_fragmentStoreSeller_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.35"
            android:background="@color/light_green"
            />

        <View
            android:id="@+id/v_fragmentStoreSeller_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.7"
            android:background="@drawable/seller_store_fragment_background"
            />

        <TextView
            android:id="@+id/tv_fragmentStoreSeller_sellerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:textSize="@dimen/very_large_text"
            android:text="@string/seller"
            android:layout_margin="@dimen/margin_3"
            />

        <TextView
            android:id="@+id/tv_fragmentStoreSeller_sellerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fragmentStoreSeller_sellerTitle"
            app:layout_constraintRight_toRightOf="@id/tv_fragmentStoreSeller_sellerTitle"
            android:layout_marginTop="@dimen/margin_3"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text"
            />

        <TextView
            android:id="@+id/tv_fragmentStoreSeller_sellerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fragmentStoreSeller_sellerName"
            app:layout_constraintRight_toRightOf="@id/tv_fragmentStoreSeller_sellerName"
            android:layout_marginTop="@dimen/margin_3"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text"
            />

        <Button
            android:id="@+id/btn_fragmentStoreSeller_deleteSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/v_fragmentStoreSeller_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="@dimen/margin_3"
            android:text="@string/delete_seller"
            android:textSize="@dimen/small_text"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_fragmentStoreSeller_shopTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/v_fragmentStoreSeller_bottom"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/very_large_text"
            android:text="@string/shop"
            android:layout_margin="@dimen/margin_3"
            />

        <TextView
            android:id="@+id/tv_fragmentStoreSeller_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fragmentStoreSeller_shopTitle"
            app:layout_constraintRight_toRightOf="@id/tv_fragmentStoreSeller_shopTitle"
            android:layout_marginTop="@dimen/margin_3"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/medium_text"
            />


        <TextView
            android:id="@+id/tv_fragmentStoreSeller_shopPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fragmentStoreSeller_shopName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginStart="@dimen/margin_3"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/small_text"
            />

        <TextView
            android:id="@+id/tv_fragmentStoreSeller_shopSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fragmentStoreSeller_shopPhone"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/margin_3"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/small_text"
            />

        <TextView
            android:id="@+id/tv_fragmentStoreSeller_shopDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fragmentStoreSeller_shopSite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/margin_3"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/small_text"
            android:lines="5"
            />

        <FrameLayout
            android:id="@+id/fl_fragmentStoreSeller_mapContiner"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/tv_fragmentStoreSeller_shopDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/margin_3"
            />

        <TextView
            android:id="@+id/tv_fragmentStoreSeller_shopAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fl_fragmentStoreSeller_mapContiner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/margin_3"
            android:lines="5"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/small_text"
            />

        <Button
            android:id="@+id/btn_fragmentStoreSeller_deleteShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fragmentStoreSeller_shopAddress"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="@dimen/margin_3"
            android:text="@string/delete_shop"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/small_text"
            />

        <ProgressBar
            android:id="@+id/pb_fragmentStoreSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>