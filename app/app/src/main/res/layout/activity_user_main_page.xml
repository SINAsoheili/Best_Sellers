<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/dl_userMainPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UserMainPage"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_userMainPage_searchShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_shop"
            />

        <ProgressBar
            android:id="@+id/pb_userMainPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv_userMainPage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/user_navigation_view_header"
        app:menu="@menu/user_main_page_navigtion_view"
        android:layout_gravity="end"
        />

</androidx.drawerlayout.widget.DrawerLayout>