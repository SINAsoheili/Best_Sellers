<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_fragmentStatisticSeller_statistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_fragmentStatisticSeller_showMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_user_messages"/>

    <ListView
        android:id="@+id/lv_fragmentStatisticSeller_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/pb_fragmentStatisticSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>